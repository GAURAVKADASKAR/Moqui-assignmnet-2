<?xml version="1.0" encoding="UTF-8"?>

<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">


    <!-- Entity for Party Type -->
    <entity entity-name="PartyType" package="Moqui.Party">
        <field name="partyTypeId" type="text-medium" is-pk="true" />
        <field name="description" type="text-long" />
        <relationship type="one-nofk" related="Party">
        </relationship>
    </entity>


    <!-- Entity for the party -->
    <entity entity-name="Party" package="Moqui.Party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="partyTypeId" type="text-medium" />
        <relationship type="one-nofk" related="Person"></relationship>
        <relationship type="one-nofk" related="Organization"></relationship>
        <relationship type="many" related="PartyRole"></relationship>
        <relationship type="one" title="PartyType" related="Enumeration">
            <key-map field-name="partyTypeId" related="enumId" />
        </relationship>


        <seed-data>
            <moqui.basic.EnumerationType description="For the person"
                enumTypeId="PartyType" />
            <moqui.basic.Enumeration description="Person type"
                enumId="Person" enumTypeId="PartyType" />
            <moqui.basic.EnumerationType description="For the organization"
                enumTypeId="Organization" />
            <moqui.basic.Enumeration description="Organization type"
                enumId="organization" enumTypeId="PartyType" />
        </seed-data>

    </entity>


    <!-- Entity for the Person -->
    <entity entity-name="Person" package="Moqui.Party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="firstName" type="text-medium" />
        <field name="lastName" type="text-medium" />
        <field name="birthDate" type="date"></field>
        <relationship type="one" related="Party">
            <key-map field-name="partyId" related="partyId" />
        </relationship>
    </entity>

    <!-- Entity for the Organization  -->
    <entity entity-name="Organization" package="Moqui.Party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="organizationName" type="text-medium" />
        <relationship type="one" related="Party">
            <key-map field-name="partyId" related="partyId" />
        </relationship>
    </entity>

    <!-- Entity for the Party Role -->
    <entity entity-name="PartyRole" package="Moqui.Party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="partytypenumId" type="text-medium" />
        <relationship type="many" related="Party">
            <key-map field-name="partyId" related="partyId" />
        </relationship>
        <relationship type="one" title="RoleType" related="Enumeration">
            <key-map field-name="partytypenumId" related="enumId"/>
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="RoleType"
                enumTypeId="RoleType" />
            <moqui.basic.Enumeration description="Contractor"
                enumId="Contractor" enumTypeId="RoleType" />
            <moqui.basic.Enumeration description="Supplier"
                enumId="Supplier" enumTypeId="RoleType" />
            <moqui.basic.Enumeration description="Agent"
                enumId="Agent" enumTypeId="RoleType" />
            <moqui.basic.Enumeration description="Distributor"
                enumId="Distributor" enumTypeId="RoleType" />
        </seed-data>


    </entity>

    <!-- Entity for the contect Mech -->
    <entity entity-name="ContectMech" package="Moqui.Party">
        <field name="contactMechId" type="id" is-pk="true" />
        <field name="contactMechTypeEnumId" type="text-medium" />
        <relationship type="one" related="Enumeration">
            <key-map field-name="contactMechTypeEnumId" />
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="ContactMech"
                enumTypeId="ContactMech" />
            <moqui.basic.Enumeration description="TELECOM_NUMBER"
                enumId="TELECOM_NUMBER" enumTypeId="ContactMech" />
            <moqui.basic.Enumeration description="POSTAL_ADDRESS"
                enumId="POSTAL_ADDRESS" enumTypeId="ContactMech" />
            <moqui.basic.Enumeration description="EMAIL_ADDRESS"
                enumId="EMAIL_ADDRESS" enumTypeId="ContactMech" />
        </seed-data>

    </entity>


    <!-- Entity Contect Mech  -->
    <entity entity-name="PartyContectMech" package="Moqui.Party">
        <field name="partyId" type="id" is-pk="true" />
        <field name="contactMechId" type="id" />
        <field name="contactMechPurposeId" type="text-medium" />
        <field name="fromDate" type="date" />

        <relationship type="one" related="ContectMech">
            <key-map field-name="contactMechId" related="contactMechId" />
        </relationship>
        <relationship type="one" related="Party">
            <key-map field-name="partyId" related="partyId" />
        </relationship>

        <relationship type="one" related="Enumeration">
            <key-map field-name="contactMechPurposeId" />
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="PurposeType"
                enumTypeId="PurposeType" />
            <moqui.basic.Enumeration description="WORK"
                enumId="Work" enumTypeId="PurposeType" />
            <moqui.basic.Enumeration description="Home"
                enumId="Home" enumTypeId="PurposeType" />
            <moqui.basic.Enumeration description="Office"
                enumId="Office" enumTypeId="PurposeType" />
        </seed-data>
    </entity>

    <!-- Entity for the postal address -->
    <entity entity-name="PostalAddress" package="Moqui.Party">
        <field name="contactMechId" type="id" />
        <field name="postaladdressId" type="id" is-pk="true" />
        <field name="toName" type="text-medium" />
        <field name="attnName" type="text-medium" />
        <field name="address1" type="text-long" />
        <field name="address2" type="text-long" />
        <field name="city" type="text-medium" />
        <field name="postalCode" type="text-medium" />
        <relationship type="one" related="ContectMech">
            <key-map field-name="contactMechId" related="contactMechId" />
        </relationship>
    </entity>


    <!-- Entity for the TelecomNumber -->
    <entity entity-name="TelecomNumber" package="Moqui.Party">
        <field name="contactMechId" type="id" />
        <field name="telecomnumberId" type="id" is-pk="true" />
        <field name="countryCode" type="number-integer" />
        <field name="areaCode" type="number-integer" />
        <field name="contactNumber" type="number-integer" />
        <relationship type="one" related="ContectMech">
            <key-map field-name="contactMechId" related="contactMechId" />
        </relationship>
    </entity>


</entities>