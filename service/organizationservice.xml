<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <!-- Service for create the telecomnumber -->
    <service verb="create" noun="Organization">
        <in-parameters>
            <auto-parameters include="all" />
        </in-parameters>
        <out-parameters>
            <parameter name="datalist" />
        </out-parameters>

        <actions>
            <entity-find-one entity-name="Party" value-field="partydata">
            <field-map field-name="partyId" from="context.partyId"/>
            </entity-find-one>
            <if condition="partydata!=null">
            <if condition="partydata.partyTypeId == 'Organization'">
            <entity-make-value entity-name="Organization" value-field="datalist" />
            <entity-set value-field="datalist" include="all" />
            <entity-create value-field="datalist" />
            <else>
            <message>Party is Not a Organization Type</message>
            </else>
            </if>
            <else>
            <message>Data is null</message>
            </else>
            </if>
        </actions>

    </service>

    <!-- Service for delete telecomnumber -->
    <service verb="delete" noun="Organization">
        <in-parameters>
            <parameter name="partyId" />
        </in-parameters>
        <actions>
            <entity-find-one entity-name="Organization" value-field="datalist">
            </entity-find-one>
            <if condition="datalist != null">
                <entity-delete value-field="datalist" />

            </if>

        </actions>
    </service>
    <!-- service for update telecomnumber -->
    <service verb="store" noun="Organization">
        <in-parameters>
            <parameter name="partyId" />
            <auto-parameters include="nonpk" />
        </in-parameters>
        <actions>
            <entity-find-one entity-name="Organization" value-field="datalist">
            </entity-find-one>
            <if condition="datalist != null">
                <entity-set value-field="datalist" include="all" />
                <entity-update value-field="datalist" />
            </if>

        </actions>

    </service>

    <!-- Service for the get data -->
    <service verb="fetch" noun="Organization">
        <in-parameters>
            <parameter name="partyId" />
        </in-parameters>
        <out-parameters>
            <parameter name="datalist" />
        </out-parameters>
        <actions>
            <entity-find entity-name="Organization" list="datalist">
                <econdition field-name="partyId" from="context.partyId" ignore-if-empty="true" />
            </entity-find>


        </actions>

    </service>

</services>