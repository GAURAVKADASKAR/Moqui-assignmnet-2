<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <!-- Service for create the telecomnumber -->
    <service verb="create" noun="Person">
        <in-parameters>
            <auto-parameters include="all" />
        </in-parameters>
        <out-parameters>
            <parameter name="datalist" />
        </out-parameters>

        <actions>
            <entity-make-value entity-name="Person" value-field="datalist" />
            <entity-set value-field="datalist" include="all" />
            <entity-create value-field="datalist" />

        </actions>

    </service>

    <!-- Service for delete telecomnumber -->
    <service verb="delete" noun="Person">
        <in-parameters>
            <parameter name="partyId" />
        </in-parameters>
        <actions>
            <entity-find-one entity-name="Person" value-field="datalist">
            </entity-find-one>
            <if condition="datalist != null">
                <entity-delete value-field="datalist" />

            </if>

        </actions>
    </service>
    <!-- service for update telecomnumber -->
    <service verb="store" noun="Person">
        <in-parameters>
            <parameter name="partyId" />
            <auto-parameters include="nonpk" />
        </in-parameters>
        <actions>
            <entity-find-one entity-name="Person" value-field="datalist">
            </entity-find-one>
            <if condition="datalist != null">
                <entity-set value-field="datalist" include="all" />
                <entity-update value-field="datalist" />
            </if>

        </actions>

    </service>

    <!-- Service for the get data -->
    <service verb="fetch" noun="Person">
    <in-parameters>
    <parameter name="partyId" />
    </in-parameters>
    <out-parameters>
    <parameter name="datalist" />
    </out-parameters>
    <actions>
    <entity-find entity-name="Person" list="datalist">
    <econdition field-name="partyId" from="context.partyId" ignore-if-empty="true" />
    </entity-find>
   
    
    </actions>
    
    </service>

</services>